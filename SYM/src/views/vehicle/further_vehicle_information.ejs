<%- layout('../form') %>


<div class="insurance_info topMainPadding">
    <div class="insurance_text">
        Request Form
    </div>
    <ul class="breadcrumbc">
        <li class="breadcrumb__item breadcrumb__item--blank">
            Vehicle Details
        </li>
        <li class="breadcrumb__item breadcrumb__item--blank">
            Personal Info
        </li>
        <li class="breadcrumb__item breadcrumb__item--blank" >
            Insurance Info
        </li>
        <li class="breadcrumb__item breadcrumb__item--blank">
            Quotation
        </li>
        <li class="breadcrumb__item breadcrumb__item--current" style="color: green">
            Further Vehicle Information
        </li>
    </ul>



    <div id="further_vehicle_information" class="vehicle_detail_bg" >
        <form  action="/furtherVehicleDetails" method="post" onsubmit="return validateFormVFuther()">
            <div class="row">
                <div id="shownamelabel" class="field__input-wrapper">
                    <label for="checkout_name" class="field__label">Engine Number</label>
                    <input id="engine_number" name="engine_number" type="text" placeholder="Engine Number" class="field__input inputType" required />
                </div>
            </div>
            <div class="row">
                <div id="shownamelabel" class="field__input-wrapper">
                    <label for="checkout_name" class="field__label">Chassis No</label>
                    <input id="chassis_no" name="chassis_no" type="text" placeholder="Chassis No" class="field__input inputType"  required />
                </div>
            </div>
            <div class="row">
                <div class="upload-drop-zone has-tooltip" id="drop-zone">
                    Just drag and drop files here
                    <span class="tooltip">
                                <span data-cvv-tooltip="unknown">
                                    Upload a scanned image or a photograph of document requested
                                </span>
                            </span>
                </div>

                <!-- Upload Finished -->
                <div class="js-upload-finished">
                    <ul class="list-group">
                        <li><img src="/static/images/home_warp-logo.svg"/></li>
                        <li><img src="/static/images/home_warp-logo.svg"/></li>
                        <li><img src="/static/images/home_warp-logo.svg"/></li>
                        <li><img src="/static/images/home_warp-logo.svg"/></li>
                    </ul>
                </div>
            </div>
            <div class="row insuranceButtonMarginTop">
                <div style="float: left;width: 100%;" class="row step__footer">

                    <button class="step__footer__continue-btn btn " type="submit" name="button">
                        <span class="btn__content">Process</span>
                    </button>
                    <a class="step__footer__previous-link" href="/insuranceQuotation">
                        <svg viewBox="0 0 6.7 11.3" height="11.3" width="6.7" xmlns="http://www.w3.org/2000/svg" class="previous-link__icon icon--chevron icon">
                            <path d="M6.7 1.1l-1-1.1-4.6 4.6-1.1 1.1 1.1 1 4.6 4.6 1-1-4.6-4.6z"/>
                        </svg>
                        Return to Previous Page
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>


<div class="bottomInfor">
    * Note - Information provided must be true.
</div>