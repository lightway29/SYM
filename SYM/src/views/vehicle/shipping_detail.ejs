<script type="text/javascript">
    (function() {
        var ccnum  = document.getElementById('cardnumber'),
                //type   = document.getElementById('ccnum-type'),
                expiry = document.getElementById('mmyy'),
                cvc    = document.getElementById('cvv')
                //submit = document.getElementById('submit')
                //result = document.getElementById('result')
                ;

        payform.cardNumberInput(ccnum);
        payform.expiryInput(expiry);
        payform.cvcInput(cvc);

        ccnum.addEventListener('input',   updateType);

        expiry.addEventListener('input', updateExtError);

        cvc.addEventListener('input', updateCvcError);

        function updateType(e) {
            var cardType = payform.parseCardType(e.target.value);
            $("#credit_card_number_tooltip").removeClass("payment-icon--visa");
            $("#credit_card_number_tooltip").removeClass("icon--lock");
            $("#credit_card_number_tooltip").removeClass("payment-icon--master");
            $("#credit_card_number_tooltip").removeClass("payment-icon--american-express");
            $("#credit_card_number_tooltip").removeClass("payment-icon--discover");

            if(cardType=='visa'){
                $("#credit_card_number_tooltip").addClass('payment-icon--visa');
            }else if(cardType=='amex'){
                $("#credit_card_number_tooltip").addClass('payment-icon--american-express');
            }else if(cardType=='mastercard'){
                $("#credit_card_number_tooltip").addClass('payment-icon--master');
            }else if(cardType=='discover'){
                $("#credit_card_number_tooltip").addClass('payment-icon--discover');
            }else{
                $("#credit_card_number_tooltip").addClass('icon--lock');
            }


            if(!(payform.validateCardNumber(ccnum.value))){
                $('#cardnumber').get(0).setCustomValidity('Entered Card is a Invalid type.');
            }else {
                $('#cardnumber').get(0).setCustomValidity('');
            }



            //type.innerHTML = cardType || 'invalid';
        }

        function updateExtError() {
            if(!(payform.validateCardExpiry(payform.parseCardExpiry(expiry.value)))){
                $('#mmyy').get(0).setCustomValidity('Entered Exp Date is a Invalid Date.');
            }else {
                $('#mmyy').get(0).setCustomValidity('');
            }
        }

        function updateCvcError() {
            if(!(payform.validateCardCVC(cvc.value))){
                $('#cvv').get(0).setCustomValidity('Entered CVC is a Invalid Number.');
            }else {
                $('#cvv').get(0).setCustomValidity('');
            }
        }


    })(window);
</script>


